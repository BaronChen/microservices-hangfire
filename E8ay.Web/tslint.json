{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "max-classes-per-file": false,
    "no-unused-expression": false,
    "no-console": false,
    "jsx-no-bind": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-string-throw": false
  }
}
